@page
@model Bortolani_Registro.Pages.Registro.editModel
@{
}

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Chiudi"></button>
	</div>
}

<form method="post">
	<input type="hidden" name="id" value="@Model.idAllievo" />
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Nome</label>
		<div class="col-sm-6">
			<input type="text" name="nome" value="@Model.Allievo.name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Cognome</label>
		<div class="col-sm-6">
			<input type="text" name="cognome" value="@Model.Allievo.surname">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Classe</label>
		<div class="col-sm-2">
			<select class="form-select" name="classe" asp-items="Model.listaClassi" asp-for="@Model.Allievo.idClass"></select>
		</div>
	</div>
	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-1 d-grid">
			<button type="submit" class="btn btn-primary">Salva</button>
		</div>
		<div class="col-sm-1 d-grid">
			<a class="btn btn-outline-primary" href="/Registro/ListaAllievi" role="button">Cancella</a>
		</div>
	</div>
</form>